---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  document-start: disable  # Don't require --- at start
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
  comments:
    min-spaces-from-content: 1
  braces:
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
